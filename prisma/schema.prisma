// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public", "auth"]
}

model Egitim {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  description String?
  content     Json?
  imageUrl    String?  @map("image_url")
  slug        String   @unique
  price       Decimal? @db.Decimal(10, 2)
  salesCount  Int      @default(0) @map("sales_count")
  category    String
  level       String
  instructor  String
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  cartItems      CartItem[]
  desiredByUsers User[]        @relation("UserDesiredEducation")
  paymentItems   PaymentItem[]

  @@schema("public")
  @@map("egitimler")
}

model BlogPost {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title     String
  content   Json
  imageUrl  String?  @map("image_url")
  slug      String   @unique
  category  String?
  excerpt   String?
  author    String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@schema("public")
  @@map("blog_posts")
}

model CartItem {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @map("user_id") @db.Uuid
  educationId String   @map("education_id") @db.Uuid
  quantity    Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  education   Egitim   @relation(fields: [educationId], references: [id], onDelete: Cascade)

  @@schema("public")
  @@map("cart_items")
}

model User {
  id                 String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstName          String   @map("first_name")
  lastName           String   @map("last_name")
  profession         String   @map("profession")
  university         String?  @map("university")
  department         String?  @map("department")
  class              String?  @map("class")
  email              String   @unique
  phone              String   @map("phone")
  notificationPermission Boolean @default(false) @map("notification_permission")
  desiredEducationId String?  @map("desired_education_id") @db.Uuid
  createdAt          DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt          DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  desiredEducation   Egitim?         @relation("UserDesiredEducation", fields: [desiredEducationId], references: [id], onDelete: SetNull)
  cartItems          CartItem[]
  payments           Payment[]

  @@schema("public")
  @@map("users")
}

model HeroSlide {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  titleMain   String   @map("title_main")
  titleHighlight String @map("title_highlight")
  description String
  imageSrc    String   @map("image_src")
  imageAlt    String   @map("image_alt")
  isActive    Boolean  @default(true) @map("is_active")
  sortOrder   Int      @default(0) @map("sort_order")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@schema("public")
  @@map("hero_slides")
}

model ContactMessage {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String   @map("name")
  email     String   @map("email")
  phone     String   @map("phone")
  message   String   @map("message")
  isRead    Boolean  @default(false) @map("is_read")
  status    String   @default("pending") @map("status") // pending, answered, archived
  userId    String?  @map("user_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@schema("public")
  @@map("contact_messages")
}

model Payment {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId         String       @map("user_id") @db.Uuid
  iyzicoToken    String?      @map("iyzico_token")
  iyzicoPaymentId String?     @map("iyzico_payment_id")
  totalAmount    Decimal      @db.Decimal(10, 2) @map("total_amount")
  paidPrice      Decimal?     @db.Decimal(10, 2) @map("paid_price")  // İyzipay'ın hesapladığı gerçek tutar (faizli)
  status         PaymentStatus @default(PENDING)
  paymentMethod  String?      @map("payment_method")
  installment    Int          @default(1)
  conversationId String       @unique @map("conversation_id")
  createdAt      DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime     @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  paymentItems  PaymentItem[]

  @@schema("public")
  @@map("payments")
}

model PaymentItem {
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  paymentId   String  @map("payment_id") @db.Uuid
  educationId String  @map("education_id") @db.Uuid
  quantity    Int     @default(1)
  unitPrice   Decimal @db.Decimal(10, 2) @map("unit_price")
  totalPrice  Decimal @db.Decimal(10, 2) @map("total_price")

  // Relations
  payment     Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  education   Egitim  @relation(fields: [educationId], references: [id], onDelete: Cascade)

  @@schema("public")
  @@map("payment_items")
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED

  @@schema("public")
  @@map("payment_status")
}
